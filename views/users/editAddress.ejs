<%-include('../layouts/headerUser')-%>
<%- include('../layouts/mobileHeaderUser')-%>

   
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/home" rel="nofollow">Home</a>
                    <span></span> Profile
                    
                </div>
            </div>
        </div>
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">Edit address</h3>
                                        </div>
                                      
                                        <form method="post"  name="addressForm" onsubmit="return validateForm()">
                                            <% if(address) { %>
                                                <input type="hidden" required="" value="<%=address._id %>" name="id"  style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />

                                            <div class="">
                                                <label for="name">Name :</label>
                                                <input type="text" required="" value="<%=address.fullName %>" name="fname" placeholder="First name *" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                            <div class="">
                                                <label for="phoneNumber">Phone Number:</label>
                                                <input type="tel" id="phone" name="phoneNumber"  value="<%=address.phone %>"  pattern="[0-9]{10}"
                                                    placeholder="Enter your phone number *" required style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                            <div class="">
                                                <label for="altphoneNumber">Alternate Number:</label>
                                                <input type="tel" id="phone2"  value="<%=address.phone2 %>"  name="phone2" pattern="[0-9]{10}"
                                                    placeholder="Alternate phone number" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                            <div class="">
                                                <label for="houseName">House Name</label>
                                                <input required="" type="text"  value="<%=address.houseName %>"  name="houseName" placeholder="House no / Name" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                
                                            <div class="">
                                                <label for="city">City</label>
                                                <input required="" type="text" name="city"  value="<%=address.city %>"  placeholder="City / Town *" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                            <div class="">
                                                <label for="state">State</label>
                                                <input required="" type="text" name="state"  value="<%=address.state %>"  placeholder="State / County *" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                           
                                            <div class="">
                                                <label for="pincode">Pincode</label>
                                                <input required="" type="text" name="pincode" value="<%=address.pincode %>" pattern="[0-9]{6}" placeholder="Postcode / ZIP *" style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                                <span class="error" id="pincodeError"></span>
                                            </div>
                                            <div class="">
                                                <label for="LandMark">Land Mark</label>
                                                <input type="text" name="landMark" placeholder="Add Land mark"  value="<%=address.landMark %>"  style="border-width: 1px; border-style: solid;border-color: black; font-weight: bold;" />
                                            </div>
                                            <div class=" ml-10">
                                                <button type="submit" >
                                                    Add new address
                                                </button>
                                            </div>
                                            
                                          
                                                <% }  else {%>
                                                
                                                <h3>Not Found</h3>
                                                <% }%>
                                            </form>

                                      
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
   
    <%-include('../layouts/footerUser')-%>



    <script>
        function validateForm() {
            let valid = true;
    
            const name = document.forms["addressForm"]["fname"].value;
            const phone = document.forms["addressForm"]["phoneNumber"].value;
            const phone2 = document.forms["addressForm"]["phone2"].value;
            const cname = document.forms["addressForm"]["houseName"].value;
            const city = document.forms["addressForm"]["city"].value;
            const state = document.forms["addressForm"]["state"].value;
            const pincode = document.forms["addressForm"]["pincode"].value;
    
            // Validation for Name
            if (!name.trim()) {
                document.getElementById("nameError").textContent = "Name is required.";
                valid = false;
            } else {
                document.getElementById("nameError").textContent = "";
            }
    
            // Validation for Phone Number
            if (!phone.match(/^\d{10}$/)) {
                document.getElementById("phoneError").textContent = "Phone number must be 10 digits.";
                valid = false;
            } else {
                document.getElementById("phoneError").textContent = "";
            }
    
            // Validation for Alternate Phone Number
            if (phone2 && !phone2.match(/^\d{10}$/)) {
                document.getElementById("phone2Error").textContent = "Alternate phone number must be 10 digits.";
                valid = false;
            } else {
                document.getElementById("phone2Error").textContent = "";
            }
    
            // Validation for House Name
            if (!cname.trim()) {
                document.getElementById("cnameError").textContent = "House Name is required.";
                valid = false;
            } else {
                document.getElementById("cnameError").textContent = "";
            }
    
            // Validation for City
            if (!city.trim()) {
                document.getElementById("cityError").textContent = "City is required.";
                valid = false;
            } else {
                document.getElementById("cityError").textContent = "";
            }
    
            // Validation for State
            if (!state.trim()) {
                document.getElementById("stateError").textContent = "State is required.";
                valid = false;
            } else {
                document.getElementById("stateError").textContent = "";
            }
    
            // Validation for Pincode
            if (!pincode.match(/^\d{6}$/)) {
                document.getElementById("pincodeError").textContent = "Pincode must be 6 digits.";
                valid = false;
            } else {
                document.getElementById("pincodeError").textContent = "";
            }
    
            // You can add more validations for other fields as needed
    
            return valid;
        }
    </script>