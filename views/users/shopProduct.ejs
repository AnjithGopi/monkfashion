        headers: {
            'Content-Type': 'application/json',
        },
    })
    .then(response => {
        if (response.ok) {
            // tostar.sucess("Added to cart")
        toastr.success("Added to cart");

        }
        
    })
    .then(data => {
        // Handle the data returned by the server
        console.log(data);

       
    })
    .catch(error => {
        // Handle errors during the fetch
        console.error('Fetch error:', error);
    });
}

</script>

</body>

</html>